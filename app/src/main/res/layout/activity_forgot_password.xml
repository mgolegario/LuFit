<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bt_voltar"
            android:layout_width="30dp"
            android:layout_height="33dp"
            app:srcCompat="@drawable/seta_icone" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="213dp"
            android:layout_height="96dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lexend_semibold"
            android:text="Alterar sua Senha"
            android:textSize="38sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/lexend"
            android:text="E-mail"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_email2"
            android:layout_width="285dp"
            android:layout_height="58dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Ex: fulano@gmail.com"
            android:inputType="textEmailAddress"
            android:textColorHint="#595959" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lexend"
            android:text="Senha nova"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_senha2"
            android:layout_width="285dp"
            android:layout_height="58dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="@font/lexend"
            android:hint="Insira sua senha aqui"
            android:inputType="textPassword"
            android:textColorHint="#595959" />

        <Button
            android:id="@+id/bt_alterar"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="42dp"
            android:backgroundTint="#5271FF"
            android:elegantTextHeight="false"
            android:fontFamily="@font/lexend_semibold"
            android:text="Alterar"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>