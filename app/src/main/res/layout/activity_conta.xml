<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Conta">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            >

            <ImageView
                android:id="@+id/bt_voltar"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/seta_icone" />

            <TextView
                android:id="@+id/tv_conta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Conta"
                android:textSize="38sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:orientation="vertical"
            android:paddingStart="30dp">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semibold"
                android:text="Nome"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_nomeEdt"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/lexend"
                android:hint="Ex: JoÃ£o da Silva"
                android:inputType="text"
                android:selectAllOnFocus="true"
                android:textColor="#404040"
                android:textColorHint="#595959" />
            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semibold"
                android:text="Altura"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_alturaEdt"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/lexend"
                android:hint="Ex: 1.9"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#404040"
                android:textColorHint="#595959" />
            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semibold"
                android:text="Peso"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_pesoEdt"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/lexend"
                android:hint="Ex: 70"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true"
                android:textColor="#404040"
                android:textColorHint="#595959" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="E-mail"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_emailEdt"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/lexend"
                android:hint="Ex: usuario@gmail.com"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:textColor="#404040"
                android:textColorHint="#595959" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Senha"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/edt_senhaEdt"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/lexend"
                android:hint="*****"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:textColor="#404040"
                android:textColorHint="#595959" />

            <Button
                android:id="@+id/btn_editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#5271FF"
                android:fontFamily="@font/lexend_semibold"
                android:text="Editar"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btn_ok"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="-54dp"
                android:backgroundTint="#5271FF"
                android:fontFamily="@font/lexend_semibold"
                android:text="OK"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>