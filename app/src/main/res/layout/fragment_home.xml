<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_homeF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <FrameLayout
        android:id="@+id/fl_btnPress"
        android:layout_width="match_parent"
        android:layout_height="695dp"
        android:visibility="invisible">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/bt_voltar"
                    android:layout_width="30dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/seta_icone" />

                <TextView
                    android:id="@+id/tv_titulo"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lexend_semibold"
                    android:text="Exercícios Projeto Verão"
                    android:textSize="26sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_conteudo"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/lexend"
                android:text="Teste teste teste teste teste teste"

                android:textSize="18sp" />
        </LinearLayout>
</ScrollView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:fontFamily="@font/lexend_semibold"
                android:text="Terça-feira, 26/03"
                android:textColor="#2E2E2E"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="210dp"
                android:fontFamily="@font/lexend_semibold"
                android:text="Olá, Usuário"
                android:textColor="#2E2E2E"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_marginStart="278dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/logo1" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="match_parent"
        android:layout_height="712dp"
        android:layout_marginTop="96dp"

        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="176dp">


        <FrameLayout
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:padding="14dp"

            android:background="@drawable/rounded_frame_bg">

            <TextView
                android:id="@+id/tv_peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semibold"
                android:maxWidth="250dp"
                android:textSize="19sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@drawable/rounded_frame_bg">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">
            <TextView
                android:id="@+id/tv_exercicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/lexend_semibold"
                android:maxWidth="290dp"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn_exercicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/lufitblue"
                android:fontFamily="@font/lexend_semibold"
                android:text="Ver Exercícios" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@drawable/rounded_frame_bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_dieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_semibold"
                android:maxWidth="290dp"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn_dieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/lufitblue"
                android:fontFamily="@font/lexend_semibold"
                android:text="Ver Dieta" />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</FrameLayout>